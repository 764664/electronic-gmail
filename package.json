{
  "name": "gmail-app",
  "productName": "Electronic Gmail",
  "version": "0.0.5",
  "description": "A Gmail web client built with Electron for OS X and Windows",
  "main": "lib/main.js",
  "bin": {
    "gmail": "./node_modules/.bin/electron ."
  },
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "build-osx": "electron-packager . --platform=darwin --arch=x64 --icon=lib/media/gmail.icns --asar --app-version=0.0.5 --app-copyright=\"Jie Lu\"",
    "build-win": "electron-packager . --platform=win32 --arch=x64 --icon=lib/media/gmail.ico --asar --app-version=0.0.5 --app-copyright=\"Jie Lu\" --version-string.ProductName=\"Electronic Gmail\" --version-string.CompanyName=\"Jie Lu\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/764664/gmail.git"
  },
  "keywords": [
    "gmail",
    "mail",
    "app"
  ],
  "author": "Jie Lu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/764664/gmail/issues"
  },
  "homepage": "https://github.com/764664/gmail",
  "dependencies": {
    "bluebird": "^3.0.5",
    "electron-json-storage": "^2.0.0",
    "jquery": "^2.1.4",
    "node-gmail-new": "^0.0.1"
  },
  "devDependencies": {
    "electron-prebuilt": "latest"
  }
}
