{
  "name": "electronic-gmail",
  "productName": "Electronic Gmail",
  "version": "0.0.10",
  "description": "A Gmail web client built with Electron for macOS and Windows",
  "main": "lib/main.js",
  "bin": {
    "gmail": "./node_modules/.bin/electron ."
  },
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "build-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=lib/media/gmail.icns --asar --app-version=0.0.10 --app-copyright=\"Jie Lu\"",
    "build-win": "electron-packager . --platform=win32 --arch=x64 --icon=lib/media/gmail.ico --asar --app-version=0.0.10 --app-copyright=\"Jie Lu\" --version-string.ProductName=\"Electronic Gmail\" --version-string.CompanyName=\"Jie Lu\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/764664/gmail.git"
  },
  "keywords": [
    "gmail",
    "mail",
    "app"
  ],
  "author": "Jie Lu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/764664/gmail/issues"
  },
  "homepage": "https://github.com/764664/gmail",
  "dependencies": {
    "electron": "1.4.3",
    "electron-debug": "^1.0.1",
    "electron-editor-context-menu": "^1.1.1",
    "electron-json-storage": "^2.0.0",
    "googleapis": "^5.2.1",
    "jquery": "^2.2.3",
    "moment": "^2.13.0",
    "node-gmail-new": "^0.0.1"
  },
  "devDependencies": {
    "devtron": "^1.3.0"
  }
}
